<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:id="@+id/layout_izbirapoti" android:orientation="vertical">
  
    <LinearLayout android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:layout_width="match_parent">

    	<com.google.android.maps.MapView
    	    android:id="@+id/mapviewizbranapot"
    	    android:layout_width="fill_parent"
    	    android:layout_height="650px"
    	    android:layout_weight="1"
    	    android:apiKey="0hbSGfgHC1ZsathP1S1T7fo9qAukUxMNFccsXYw"
    	    android:clickable="true" >
</com.google.android.maps.MapView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center|left|right"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="48px"
                android:layout_height="match_parent"
                android:layout_weight="0.17"
                android:gravity="left"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnNazajIzbranaPot"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/buttonnazaj" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical|right"
                android:orientation="vertical" >

                <ZoomControls
                    android:id="@+id/zoomControls1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" android:layout_gravity="right"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
